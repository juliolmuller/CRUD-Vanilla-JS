{
  "name": "crud-javascript",
  "version": "1.2.0",
  "description": "Simple CRUD application with vanilla JavaScript.",
  "author": "Julio L. Muller",
  "license": "MIT",
  "homepage": "https://juliolmuller.github.io/crud-javascript",
  "repository": {
    "type": "git",
    "url": "https://github.com/juliolmuller/crud-javascript"
  },
  "bugs": {
    "url": "https://github.com/juliolmuller/crud-javascript/issues"
  },
  "scripts": {
    "serve": "parcel src/index.html -d docs/",
    "start": "parcel serve src/index.html -d docs/",
    "watch": "parcel watch src/index.html -d docs/",
    "build": "parcel build src/index.html -d docs/ --public-url ./"
  },
  "devDependencies": {
    "@lacussoft/eslint-config-standard": "^1.0.4",
    "eslint": "^6.8.0",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.10"
  },
  "dependencies": {
    "admin-lte": "~3.0.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "@lacussoft/standard"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "rules": {
      "no-underscore-dangle": "off"
    }
  }
}
